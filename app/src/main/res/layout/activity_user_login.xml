<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserLogin"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Userlogin"
        style="@android:style/TextAppearance.Large"
        android:gravity="center"/>

    <EditText
        android:layout_marginTop="50dp"
         android:id="@+id/usr_edittxt_phoneno"
         android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:hint="phone no."
        android:layout_gravity="center"
        android:maxLines="1"
        android:inputType="phone" />

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/usr_edittxt_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="password"
        android:layout_gravity="center"
        android:maxLines="1"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/usr_btn_login"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="login"/>

    <TextView
        android:id="@+id/usr_txt_register"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:text="new user ?"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/usr_txt_gotoadminlogin"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:text="go to admin login"
        android:textColor="#c330ce"
        android:layout_gravity="center"/>



</LinearLayout>